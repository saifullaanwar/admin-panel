<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Manajemen Kategori & Produk</title>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin: 40px; line-height: 1.6; color: #333; background-color: #f4f7f6; }
        .container { max-width: 1000px; margin: auto; background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); }
        
        /* Header & Info */
        .header-flex { display: flex; justify-content: space-between; align-items: center; border-bottom: 2px solid #eee; padding-bottom: 15px; margin-bottom: 20px; }
        h1, h2 { color: #2c3e50; margin: 0; }
        h2 { margin-top: 50px; border-bottom: 2px solid #eee; padding-bottom: 10px; }
        
        /* Style untuk Form */
        form.add-form { background: #f8f9fa; padding: 20px; border-radius: 8px; border: 1px solid #e9ecef; margin-bottom: 20px; display: flex; flex-wrap: wrap; gap: 10px; }
        .search-container { background: #e9ecef; padding: 15px; border-radius: 8px; margin-bottom: 15px; display: flex; gap: 10px; align-items: center; }
        
        input[type="text"], input[type="number"], select { padding: 12px; border: 1px solid #ced4da; border-radius: 4px; font-size: 14px; }
        input.flex-grow { flex-grow: 1; }
        
        /* Button Styles */
        .btn { padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-weight: bold; transition: 0.3s; font-size: 14px; text-decoration: none; display: inline-block; text-align: center; }
        .btn-success { background: #28a745; color: white; }
        .btn-success:hover { background: #218838; }
        .btn-danger { background: #dc3545; color: white; }
        .btn-danger:hover { background: #c82333; }
        .btn-warning { background: #ffc107; color: #212529; }
        .btn-secondary { background: #6c757d; color: white; }
        .btn-info { background: #17a2b8; color: white; }
        
        /* Style untuk Tabel */
        table { width: 100%; border-collapse: collapse; margin-top: 15px; margin-bottom: 30px; }
        th, td { padding: 12px; text-align: left; border-bottom: 1px solid #dee2e6; }
        th { background-color: #007bff; color: white; text-transform: uppercase; font-size: 13px; }
        tr:hover { background-color: #f9f9f9; }
        
        .status-ok { color: #28a745; font-weight: bold; font-size: 14px; }
        .badge { padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: bold; text-transform: uppercase; }
        .badge-active { background: #e2f9e1; color: #1e7e34; }
        .badge-category { background: #e7f1ff; color: #007bff; border: 1px solid #cfe2ff; }

        .edit-form-inline { display: none; gap: 5px; align-items: center; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-flex">
            <div>
                <h1>Admin Panel</h1>
                <span class="status-ok">‚óè Database Terhubung</span>
            </div>
            <a href="#" class="btn btn-danger" onclick="confirmLogout(event)">Logout</a>
        </div>

        <h2>1. Manajemen Kategori</h2>
        <form action="/add-category" method="POST" class="add-form">
            <input type="text" name="name" class="flex-grow" placeholder="Nama kategori baru..." required>
            <button type="submit" class="btn btn-success">Simpan Kategori</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th style="width: 10%;">ID</th>
                    <th style="width: 40%;">Nama Kategori</th>
                    <th style="width: 20%;">Status</th>
                    <th style="width: 30%;">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (categories.length > 0) { %>
                    <% categories.forEach(cat => { %>
                        <tr>
                            <td><strong>#<%= cat.id %></strong></td>
                            <td>
                                <span id="name-text-<%= cat.id %>"><%= cat.name %></span>
                                <form id="edit-form-<%= cat.id %>" action="/edit-category" method="POST" class="edit-form-inline">
                                    <input type="hidden" name="id" value="<%= cat.id %>">
                                    <input type="text" name="name" value="<%= cat.name %>" required>
                                    <button type="submit" class="btn btn-success">Update</button>
                                    <button type="button" class="btn btn-secondary" onclick="toggleEdit('<%= cat.id %>')">Batal</button>
                                </form>
                            </td>
                            <td><span class="badge badge-active">Aktif</span></td>
                            <td>
                                <div style="display: flex; gap: 5px;">
                                    <button class="btn btn-warning" onclick="toggleEdit('<%= cat.id %>')">Edit</button>
                                    <form action="/delete-category" method="POST" id="form-del-cat-<%= cat.id %>">
                                        <input type="hidden" name="id" value="<%= cat.id %>">
                                        <button type="button" class="btn btn-danger" onclick="confirmDelete('form-del-cat-<%= cat.id %>', 'Kategori ini')">Hapus</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td colspan="4" style="text-align: center; color: #888;">Belum ada kategori.</td></tr>
                <% } %>
            </tbody>
        </table>

        <h2>2. Manajemen Produk</h2>
        
        <div class="search-container">
            <form action="/" method="GET" style="display: flex; gap: 10px; width: 100%;">
                <input type="text" name="search" class="flex-grow" placeholder="Cari nama produk..." value="<%= search || '' %>">
                <button type="submit" class="btn btn-info">Cari</button>
                <% if (search) { %>
                    <a href="/" class="btn btn-secondary">Reset</a>
                <% } %>
            </form>
        </div>

        <form action="/add-product" method="POST" class="add-form">
            <input type="text" name="name" placeholder="Nama Produk" required style="width: 250px;">
            <input type="number" name="price" placeholder="Harga (Rp)" required style="width: 150px;">
            <input type="number" name="stock" placeholder="Stok" required style="width: 80px;">
            
            <select name="categoryId" required>
                <option value="">-- Pilih Kategori --</option>
                <% categories.forEach(cat => { %>
                    <option value="<%= cat.id %>"><%= cat.name %></option>
                <% }); %>
            </select>
            
            <button type="submit" class="btn btn-success">Tambah Produk</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Produk</th>
                    <th>Harga</th>
                    <th>Stok</th>
                    <th>Kategori</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (products && products.length > 0) { %>
                    <% products.forEach(prod => { %>
                        <tr>
                            <td>#<%= prod.id %></td>
                            <td><strong><%= prod.name %></strong></td>
                            <td>Rp <%= prod.price.toLocaleString('id-ID') %></td>
                            <td><%= prod.stock %> unit</td>
                            <td>
                                <span class="badge badge-category">
                                    <%= prod.category ? prod.category.name : 'Tanpa Kategori' %>
                                </span>
                            </td>
                            <td>
                                <form action="/delete-product" method="POST" id="form-del-prod-<%= prod.id %>">
                                    <input type="hidden" name="id" value="<%= prod.id %>">
                                    <button type="button" class="btn btn-danger" onclick="confirmDelete('form-del-prod-<%= prod.id %>', 'Produk ini')">Hapus</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td colspan="6" style="text-align: center; color: #888;">Tidak ada produk ditemukan.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script>
        // Fungsi Toggle Input Edit Kategori
        function toggleEdit(id) {
            const nameText = document.getElementById('name-text-' + id);
            const editForm = document.getElementById('edit-form-' + id);
            if (editForm.style.display === 'none' || editForm.style.display === '') {
                editForm.style.display = 'flex';
                nameText.style.display = 'none';
            } else {
                editForm.style.display = 'none';
                nameText.style.display = 'inline';
            }
        }

        // Fungsi SweetAlert2 untuk Konfirmasi Hapus
        function confirmDelete(formId, targetName) {
            Swal.fire({
                title: 'Hapus ' + targetName + '?',
                text: "Data yang dihapus tidak bisa dikembalikan!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Ya, Hapus!',
                cancelButtonText: 'Batal',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById(formId).submit();
                }
            })
        }

        // Fungsi SweetAlert2 untuk Konfirmasi Logout
        function confirmLogout(event) {
            event.preventDefault();
            Swal.fire({
                title: 'Yakin ingin keluar?',
                text: "Sesi Anda akan berakhir.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#007bff',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Ya, Logout',
                cancelButtonText: 'Batal'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/logout';
                }
            })
        }
    </script>
</body>
</html>